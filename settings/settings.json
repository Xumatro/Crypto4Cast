{
	"API": {
		"base_url": "https://min-api.cryptocompare.com/",
		"key_file": "settings/api_key.txt",
		"exchange": "Kraken"
	},
	"Data": {
		"res_sym": "USD",
		"req_sym": "BTC",
		"timeframe": 1916,
		"granularity": "day",
		"trim_leading_blank": true,
		"series_lenght": 90,
		"train_test_ratio": 0.85,
		"prediction_len": 2,
		"save_file": "data/history.json"
	},
	"RNN": {
		"trained_file": "model/predictor.h5",
		"arch_file": "model/predictor.json",
		"loss_function": "mean_squared_error",
		"optimizer": "rmsprop",
		"batch_size": 1,
		"epochs": 10,
		"layers": [
			{
				"type": "GRU",
				"units": 90,
				"activation": "tanh",
				"alpha": null,
				"return_seq": true
			},
			{
				"type": "GRU",
				"units": 60,
				"activation": "tanh",
				"alpha": null,
				"return_seq": true
			},
			{
				"type": "GRU",
				"units": 30,
				"activation": "tanh",
				"alpha": null,
				"return_seq": true
			},
			{
				"type": "GRU",
				"units": 15,
				"activation": "tanh",
				"alpha": null,
				"return_seq": false
			},
			{
				"type": "Dense",
				"units": 2,
				"activation": "linear",
				"alpha": null,
				"return_seq": false
			}
		]
	},
	"Graph": {
		"DPI": 450,
		"save_file": "data/history.png",
		"dark_mode": true,
		"data_lenght": 60,
		"show_grid": true
	}
}
